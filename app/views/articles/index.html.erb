<div class = "header">
  <div class = "header__contents">
    <p class = "header__contents--logo">LHS</p>
  </div>
  <div class = "header__search">
    <form action = "" id = "search-form" method = "post">
      <input type = "text" id = "search-field" placeholder = "キーワードを入力"/>
      <input type = "submit"  id = "search-btn" value = "検索" />
    </form>
  </div>
  <% if user_signed_in? %>
  <div class = "header__name">
    <span><%= current_user.nickname %></span>
  </div>
  <div class = "header__new">
    <%= link_to '投稿する', new_article_path %>
  </div>
  <div class = "header__create">
    <%= link_to 'マイページ', '' %>
  </div>
  <div class = "header__btn">
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'post'%>
  </div>
  <% else %>
  <div class = "header__btn">
    <%= link_to "ログイン", new_user_session_path, class: 'post' %>
  </div>
  <div class = "header__create">
    <%= link_to "新規登録", new_user_registration_path, class: 'post'%>
  </div>
  <% end %>
</div>

<div class = "contents">
  <div class = "filters">
    <ul class = "filters__category">
      <li><%= link_to 'All', '' %></li>
      <li><%= link_to 'Cook', '' %></li>
      <li><%= link_to 'Clean', '' %></li>
      <li><%= link_to 'Beauty', '' %></li>
      <li><%= link_to 'Other', '' %></li>
    </ul>
  </div>

  <div class = "popular">
    <span>人気投稿</span>
    <section class="card">
      <a href = "">
        <img class="card__img" src="https://publicdomainq.net/images/201710/07s/publicdomainq-0014143ddc.jpg" alt="">
        <div class="card__content">
          <h1 class="card__text">title</h1>
        </div>
        <div class = "card__likes">
          <i class="fas fa-heart"></i>
          <p>3</p>
        </div>
      </a>
    </section>
  </div>

  <div class = "arrival">
    <span>新着記事</span>
    <section class="card">
      <a href = "">
        <img class="card__img" src="https://publicdomainq.net/images/201710/07s/publicdomainq-0014143ddc.jpg" alt="">
        <div class="card__content">
          <h1 class="card__text">title2</h1>
        </div>
        <div class = "card__likes">
          <i class="fas fa-heart"></i>
          <p>3</p>
        </div>
      </a>
    </section>
  </div>
</div>