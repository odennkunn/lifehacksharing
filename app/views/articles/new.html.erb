<div class = "post-header">
  <h1>LHS</h1>
</div>

<div class = "postbox">
  <div class = "postbox__card">
  <%= form_tag('/articles', method: :post, multipart: :ture) do %>
    <div class = 'label'>
      <h3>写真</h3>
      <p>必須</p>
    </div>
    <label for = "postimage">
      ファイルを選択
      <input type="file" id="postimage" accept="image/*" name="article[image]">
    </label>
    <div class = "preview">
    </div>
    <div class = 'label'>
      <h3>タイトル</h3>
      <p>必須</p>
    </div>
    <input placeholder = "記事のタイトル" type="text" name="article[title]" class="post-input">
    <div class = 'label'>
      <h3>本文</h3>
      <p>必須</p>
    </div>
    <textarea placeholder = "ライフハック術の説明" name="article[text]" cols="50" rows="5"></textarea>
    <div class = 'label'>
      <h3>カテゴリ</h3>
       <p>必須</p>
    </div>
    <select name="article[category]">
      <option value="cook">cook</option>
      <option value="clean">clean</option>
      <option value="beauty">beauty</option>
      <option value="other">other</option>
    </select>
     <input type="submit" value="投稿する" class="send">
  <% end %>
</div>