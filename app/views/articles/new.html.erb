<div class = "post-header">
  <h1>LHS</h1>
</div>

<div class = "postbox">
  <div class = "postbox__card">
  <%= form_with model: @article, local: true do |f| %>
    <div class = 'label'>
      <h3>写真</h3>
      <p>必須</p>
    </div>
    <%= f.label '画像を選択', for: 'postimage' %>
      <%= f.file_field :image, id: 'postimage', accept: 'image/*', class: 'hidden' %>
    <div class = "preview">
    </div>
    <div class = 'label'>
      <h3>タイトル</h3>
      <p>必須</p>
    </div>
    <%= f.text_field :title, placeholder: '記事のタイトル', class: 'post-input' %>
    <div class = 'label'>
      <h3>本文</h3>
      <p>必須</p>
    </div>
    <%= f.text_area :text, placeholder: 'ライフハック術の説明', cols: '50', rows: '5' %>
    <div class = 'label'>
      <h3>カテゴリ</h3>
       <p>必須</p>
    </div>
    <%= f.select :category, Article.categories.keys, {prompt: '---'} %>
    <%= f.submit :send, value: '投稿する', class: 'send' %>
  <% end %>
</div>