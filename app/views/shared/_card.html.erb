<% @articles.each do |article| %>
  <section class="card">
    <%= image_tag article.image.url, class: 'card__img' %>
    <div class="card__content">
      <h1 class="card__text">
        <%= article.title %>
      </h1>
    </div>
    <%= link_to '詳細', "/articles/#{article.id}", method: :get %>
    <div class = "card__likes">
      <i class="fas fa-heart"></i>
      <p>3</p>
    </div>
  </section>
<% end %>